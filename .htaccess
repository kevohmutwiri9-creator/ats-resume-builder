# Enable URL rewriting
RewriteEngine On

# Don't rewrite if file or directory exists
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Rewrite specific routes to their HTML files
RewriteRule ^builder/?$ /builder.html [L]
RewriteRule ^cover-letter/?$ /cover-letter.html [L]
RewriteRule ^ats/?$ /ats.html [L]
RewriteRule ^templates/?$ /templates.html [L]
RewriteRule ^examples/?$ /examples.html [L]
RewriteRule ^interview/?$ /interview.html [L]
RewriteRule ^guides/?$ /guides/index.html [L]
RewriteRule ^privacy/?$ /privacy.html [L]
RewriteRule ^terms/?$ /terms.html [L]
RewriteRule ^about/?$ /about.html [L]

# Set proper content types
<Files "*.html">
    Header set Content-Type "text/html; charset=UTF-8"
</Files>

<Files "*.css">
    Header set Content-Type "text/css"
</Files>

<Files "*.js">
    Header set Content-Type "application/javascript"
</Files>

# Cache static assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>
